<table class="table table-bordered">
    <thead>
        <tr>
        <th colspan='4'>Mahinui Auto Shop Work Tasks</th>
        </tr>

        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col" colspan= "2">
            <form class="form-inline">
            <div class="input-group">
            <input type="text" name="filter" id="filter">
            <button id="search" type="button">Search</button>
            </div>
            </form>
            </th>
        </tr>
    </thead>

    {{#if dataRows}}
    <tbody>
        {{#each dataRows}}
        <tr id= "{{this.id}}">
            <th scope="row">{{this.id}}</td>
            <td>{{this.name}}</td>
            <td><button id= "{{this.id}}Update">Update</button>
            <button id= "{{this.id}}Delete">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
    {{/if}}
</table>
<br>
