<div class="jumbotron jumbotron-fluid" style="background-image: linear-gradient(to bottom, rgba(255,255,255,0.35) 0%,rgba(255,255,255,0.35) 100%), url(images/skyline1_BW.jpg); background-size: 100% 125%;" >
 
  <div class="container">
    <h1 class="display-4">{{title}}s</h1>
    <p class="lead">{{relationship}}</p>
    {{#if update}}
        <p>Add, Delete, Update or Search (cannot search data in {} ) {{title}} using this page</p>
    {{else}}
        <p>Add, Delete or Search (cannot search data in {} ) {{title}} using this page</p>
    {{/if}}
  </div>
</div>
<div class = 'container'>
    <div>
        <a class="btn btn-outline-success my-2 my-sm-0" href={{addHref}} role="button">Add {{title}}</a>
    </div> <br>
    <table class="table table-bordered table-hover table-striped">
        <thead class= 'thead-dark'>
            {{#if dataColumns}}
            <tr>
                {{#each dataColumns}}
                    {{#each this}}
                    <th scope="col">{{.}}</th>
                    {{/each}}
                
                {{/each}}
                <th scope="col" colspan= "2">
                <form class="form-inline" action={{searchHref}} method="get">
                    <input class="form-control mr-sm-2" type="search" aria-label="Search" name="search">
                    <button class="btn btn-outline-info my-2 my-sm-0" type="submit">Search</button>
                </form>
                </th>
            </tr>
            {{/if}}
        </thead>

        {{#if dataRows}}
        <tbody>
            {{#each dataRows}}
            <tr id= "{{this.id}}">
                {{#each this}}
                    <td>{{checkNull .}}</td>
                {{/each}}
                <td>
                    <a class="btn btn-outline-danger my-2 my-sm-0" href={{../deleteHref}}?id={{this.id}} role="button">Delete</a>
                    {{#if ../update}}
                        <a class="btn btn-outline-warning my-2 my-sm-0" href={{../updateHref}}?id={{this.id}} role="button">Update</a>
                    {{/if}}
                </td>
                    
            </tr>
            {{/each}}
        </tbody>
        {{/if}}
    </table>
</div>