<div class = 'container'>
    <h3>{{title}} 
        <a class="btn btn-outline-success my-2 my-sm-0" href={{addHref}} role="button">Add</a>
        <a class="btn btn-outline-warning" href={{updateHref}} role="button">Update</a>
    </h3>

    <table class="table table-bordered table-hover">
        <thead class= 'thead-light'>
            {{#if dataColumns}}
            <tr>
                {{#each dataColumns}}
                    {{#each this}}
                    <th scope="col">{{.}}</th>
                    {{/each}}
                
                {{/each}}
                <th scope="col" colspan= "2">
                <form class="form-inline">
                    <input class="form-control mr-sm-2" type="search" aria-label="Search">
                    <button class="btn btn-outline-info my-2 my-sm-0" type="submit">Search</button>
                </form>
                </th>
            </tr>
            {{/if}}
        </thead>

        {{#if dataRows}}
        <tbody>
            {{#each dataRows}}
            <tr id= "{{this.id}}">
                {{#each this}}
                    <td>{{.}}</td>
                {{/each}}
                <td><button type="button" class="btn btn-outline-danger">Delete</button></td>
            </tr>
            {{/each}}
        </tbody>
        {{/if}}
    </table>
</div>
