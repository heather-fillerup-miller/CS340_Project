<h2>{{title}}</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">Customer Name</th>
            <th scope="col">Car Description</th>
            <th scope="col">Current Task</th>
            <th scope="col">Current Task Id</th>
            <th scope="col">Task Start Date</th>
            <th scope="col">Mechanic</th>
            <th scope="col" colspan= "2">
            <form class="form-inline">
                <input class="form-control mr-sm-2" type="search" aria-label="Search">
                <button class="btn btn-outline-info my-2 my-sm-0" type="submit">Search</button>
            </form>
            </th>
        </tr>
    </thead>

    {{#if dataRows}}
    <tbody>
        {{#each dataRows}}
        <tr>
            <td>{{this.customer_name}}</td>
            <td>{{this.car_description}}</td>
            <td>{{this.work_task}}</td>
            <td>{{this.work_task_id}}</td>
            <td>{{this.start_date}}</td>
            <td>{{this.mechanic_name}}</td>
        </tr>
        {{/each}}
    </tbody>
    {{/if}}
</table>
<br>
