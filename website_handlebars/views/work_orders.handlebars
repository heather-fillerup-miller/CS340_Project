<h2>{{title}} <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Add</button></h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
        <th colspan='5'>Work Orders</th>
        </tr>

        <tr>
            <th scope="col">Repair Order ID</th>
            <th scope="col">Work Task ID</th>
            <th scope="col">Mechanic ID</th>
            <th scope="col">Start Date</th>
            <th scope="col">End Date</th>
            <th scope="col" colspan= "2">
            <form class="form-inline">
                <input class="form-control mr-sm-2" type="search" aria-label="Search">
                <button class="btn btn-outline-info my-2 my-sm-0" type="submit">Search</button>
            </form>
            </th>
        </tr>
    </thead>

    {{#if dataRows}}
    <tbody>
        {{#each dataRows}}
        <tr id= "{{this.repair_order_id}}">
            <th scope="row">{{this.repair_order_id}}</td>
            <td>{{this.work_task_id}}</td>
            <td>{{this.mechanic_id}}</td>
            <td>{{this.start_date}}</td>
            <td>{{this.end_date}}</td>
            <td><button type="button" class="btn btn-outline-warning">Update</button>
            <button type="button" class="btn btn-outline-danger">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
    {{/if}}
</table>
<br>
